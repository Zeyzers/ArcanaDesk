{
  "name": "arcanadesk",
  "version": "1.0.0",
  "description": "Lightweight Electron desktop app with DM tools for tabletop RPGs.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "lint": "eslint . --ext .js,.cjs,.mjs",
    "format:check": "prettier --check \"**/*.{js,json,css,html}\"",
    "format:write": "prettier --write \"**/*.{js,json,css,html}\"",
    "pack:win": "electron-packager . ArcanaDesk --platform=win32 --arch=x64 --out=dist --overwrite --prune=true"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-packager": "^17.1.2",
    "eslint": "^9.14.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18"
  },
  "author": "",
  "license": "MIT"
}
